---
// src/pages/learn/flower.astro
import Layout from '../../layouts/Layout.astro';

const pageTitle = 'Learn About Cannabis Flower | FLMint Deals';
const category = {
  name: 'Flower',
  icon: 'ðŸŒ¿',
  slug: 'flower'
};

// Sample blog posts - these would typically come from a CMS
const relatedPosts = [
  {
    title: "Understanding Indica vs Sativa vs Hybrid Strains",
    excerpt: "Learn the key differences between cannabis strain types and how they affect your experience.",
    slug: "indica-sativa-hybrid-guide",
    readTime: "5 min read",
    category: "Education"
  },
  {
    title: "How to Choose the Right Cannabis Flower for Beginners",
    excerpt: "A comprehensive guide for first-time cannabis flower buyers in Florida.",
    slug: "beginners-guide-cannabis-flower",
    readTime: "7 min read",
    category: "Beginner Guide"
  },
  {
    title: "Cannabis Terpenes: The Science Behind Smell and Effects",
    excerpt: "Discover how terpenes influence the aroma, flavor, and effects of cannabis flower.",
    slug: "cannabis-terpenes-guide",
    readTime: "8 min read",
    category: "Science"
  },
  {
    title: "Proper Cannabis Storage: Keeping Your Flower Fresh",
    excerpt: "Learn the best practices for storing cannabis flower to maintain potency and flavor.",
    slug: "cannabis-storage-guide",
    readTime: "4 min read",
    category: "Tips"
  }
];
---

<Layout title={pageTitle}>
  <!-- Breadcrumb Navigation -->
  <nav class="bg-slate-50 dark:bg-slate-900 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-2 text-sm">
        <a href="/" class="text-emerald-600 hover:text-emerald-800 dark:text-emerald-400">Home</a>
        <span class="text-slate-400">/</span>
        <a href="/categories" class="text-emerald-600 hover:text-emerald-800 dark:text-emerald-400">Categories</a>
        <span class="text-slate-400">/</span>
        <span class="text-slate-600 dark:text-slate-300">Cannabis Flower</span>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-r from-emerald-600 via-emerald-700 to-teal-700 dark:from-emerald-800 dark:via-emerald-900 dark:to-teal-900">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <div class="text-8xl mb-8">{category.icon}</div>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Cannabis Flower Guide
        </h1>
        <p class="text-xl md:text-2xl text-emerald-100 max-w-3xl mx-auto leading-relaxed">
          Everything you need to know about premium cannabis flower, from strain types to consumption methods and selection tips.
        </p>
      </div>
    </div>

    <!-- Floating geometric shapes -->
    <div class="absolute top-10 left-10 w-20 h-20 bg-white/10 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-emerald-300/20 rounded-full blur-2xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-teal-300/30 rounded-full blur-lg animate-pulse delay-500"></div>
  </section>

  <!-- Main Article Content -->
  <article class="py-16 -mt-12 relative z-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white/90 dark:bg-slate-800/90 backdrop-blur-xl rounded-3xl p-8 md:p-12 shadow-2xl border border-white/20 dark:border-slate-700/20">

        <!-- Introduction -->
        <div class="prose prose-lg max-w-none dark:prose-invert">
          <h2 class="text-3xl font-bold text-emerald-800 dark:text-emerald-400 mb-6">What is Cannabis Flower?</h2>

          <p class="text-lg text-slate-700 dark:text-slate-300 leading-relaxed mb-8">
            Cannabis flower, also known as bud or marijuana, represents the most traditional and popular form of cannabis consumption.
            These are the smokable, dried flowers of the female cannabis plant that contain the highest concentrations of cannabinoids
            like THC and CBD, along with aromatic terpenes that provide unique flavors and effects.
          </p>

          <h3 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Types of Cannabis Flower</h3>

          <!-- Strain Types Grid -->
          <div class="grid md:grid-cols-3 gap-6 mb-8 not-prose">
            <div class="bg-gradient-to-br from-purple-50 to-indigo-50 dark:from-purple-900/20 dark:to-indigo-900/20 p-6 rounded-xl border border-purple-200 dark:border-purple-800">
              <h4 class="text-lg font-bold text-purple-800 dark:text-purple-400 mb-3">Indica</h4>
              <p class="text-sm text-slate-600 dark:text-slate-400">
                Known for relaxing, sedating effects. Perfect for evening use, pain relief, and sleep aid. Typically produces a "body high."
              </p>
            </div>

            <div class="bg-gradient-to-br from-orange-50 to-red-50 dark:from-orange-900/20 dark:to-red-900/20 p-6 rounded-xl border border-orange-200 dark:border-orange-800">
              <h4 class="text-lg font-bold text-orange-800 dark:text-orange-400 mb-3">Sativa</h4>
              <p class="text-sm text-slate-600 dark:text-slate-400">
                Energizing and uplifting effects. Ideal for daytime use, creativity, and social activities. Often produces a "head high."
              </p>
            </div>

            <div class="bg-gradient-to-br from-emerald-50 to-teal-50 dark:from-emerald-900/20 dark:to-teal-900/20 p-6 rounded-xl border border-emerald-200 dark:border-emerald-800">
              <h4 class="text-lg font-bold text-emerald-800 dark:text-emerald-400 mb-3">Hybrid</h4>
              <p class="text-sm text-slate-600 dark:text-slate-400">
                Combines both indica and sativa effects. Balanced experiences that can be tailored for specific needs and preferences.
              </p>
            </div>
          </div>

          <h3 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">How to Choose Quality Flower</h3>

          <p class="text-slate-700 dark:text-slate-300 mb-6">
            Selecting premium cannabis flower involves examining several key characteristics that indicate quality,
            freshness, and potency. Here's what to look for:
          </p>

          <ul class="space-y-3 mb-8">
            <li class="flex items-start">
              <span class="text-emerald-600 font-bold mr-3">âœ“</span>
              <span><strong>Visual Appeal:</strong> High-quality flower should be vibrant in color with visible trichomes (crystal-like structures) covering the surface.</span>
            </li>
            <li class="flex items-start">
              <span class="text-emerald-600 font-bold mr-3">âœ“</span>
              <span><strong>Aroma:</strong> Fresh cannabis has a distinct, pleasant smell. Avoid flower that smells musty, moldy, or has no scent at all.</span>
            </li>
            <li class="flex items-start">
              <span class="text-emerald-600 font-bold mr-3">âœ“</span>
              <span><strong>Texture:</strong> Quality flower should be neither too dry (crumbles to dust) nor too moist (difficult to break apart).</span>
            </li>
            <li class="flex items-start">
              <span class="text-emerald-600 font-bold mr-3">âœ“</span>
              <span><strong>Lab Testing:</strong> Always choose lab-tested flower that shows cannabinoid content and screens for contaminants.</span>
            </li>
          </ul>

          <h3 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Consumption Methods</h3>

          <p class="text-slate-700 dark:text-slate-300 mb-6">
            Cannabis flower offers versatility in consumption methods, each providing different onset times,
            duration, and intensity of effects:
          </p>

          <div class="bg-slate-50 dark:bg-slate-700/50 p-6 rounded-xl mb-8">
            <h4 class="font-bold text-slate-800 dark:text-white mb-4">Popular Methods:</h4>
            <div class="grid md:grid-cols-2 gap-4 text-sm">
              <div>
                <strong class="text-emerald-700 dark:text-emerald-400">Smoking:</strong> Traditional joints, pipes, or bongs for immediate effects
              </div>
              <div>
                <strong class="text-emerald-700 dark:text-emerald-400">Vaporizing:</strong> Healthier alternative that heats without combustion
              </div>
              <div>
                <strong class="text-emerald-700 dark:text-emerald-400">Infusion:</strong> Create edibles, tinctures, or topicals at home
              </div>
              <div>
                <strong class="text-emerald-700 dark:text-emerald-400">Dabbing:</strong> High-temperature consumption for experienced users
              </div>
            </div>
          </div>

          <h3 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Storage and Freshness</h3>

          <p class="text-slate-700 dark:text-slate-300 mb-6">
            Proper storage is crucial for maintaining the potency, flavor, and quality of cannabis flower.
            Follow these guidelines to keep your flower fresh:
          </p>

          <div class="bg-amber-50 dark:bg-amber-900/20 p-6 rounded-xl border border-amber-200 dark:border-amber-800 mb-8">
            <ul class="space-y-2 text-sm">
              <li><strong>Temperature:</strong> Store in a cool, dark place (60-70Â°F)</li>
              <li><strong>Humidity:</strong> Maintain 59-63% relative humidity</li>
              <li><strong>Container:</strong> Use airtight glass jars to prevent air exposure</li>
              <li><strong>Light:</strong> Keep away from direct sunlight and UV rays</li>
              <li><strong>Handling:</strong> Minimize handling to preserve trichomes</li>
            </ul>
          </div>

          <h3 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Florida Cannabis Regulations</h3>

          <p class="text-slate-700 dark:text-slate-300 mb-6">
            In Florida, cannabis flower is available to qualified medical marijuana patients through licensed dispensaries.
            Understanding local regulations ensures compliant and safe consumption:
          </p>

          <ul class="space-y-2 mb-8 text-sm">
            <li>â€¢ Must have valid Florida medical marijuana card</li>
            <li>â€¢ Purchase only from licensed dispensaries</li>
            <li>â€¢ Follow dosage recommendations from physicians</li>
            <li>â€¢ Consumption limited to private properties</li>
            <li>â€¢ Keep products in original packaging when transporting</li>
          </ul>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Blog Posts Section -->
  <section class="py-16 bg-gradient-to-r from-slate-50 to-emerald-50 dark:from-slate-900 dark:to-emerald-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-800 dark:text-white mb-4">
          Related Articles & Guides
        </h2>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
          Deepen your cannabis knowledge with our comprehensive guides and educational content.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {relatedPosts.map((post, index) => (
          <article class="bg-white/60 dark:bg-slate-800/60 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="mb-4">
              <span class="inline-block bg-emerald-100 dark:bg-emerald-900/50 text-emerald-800 dark:text-emerald-400 text-xs font-semibold px-3 py-1 rounded-full">
                {post.category}
              </span>
            </div>

            <h3 class="text-lg font-bold text-slate-800 dark:text-white mb-3 leading-tight">
              <a href={`/blog/${post.slug}`} class="hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">
                {post.title}
              </a>
            </h3>

            <p class="text-sm text-slate-600 dark:text-slate-400 mb-4 leading-relaxed">
              {post.excerpt}
            </p>

            <div class="flex justify-between items-center text-xs text-slate-500 dark:text-slate-400">
              <span>{post.readTime}</span>
              <a href={`/blog/${post.slug}`} class="text-emerald-600 dark:text-emerald-400 hover:text-emerald-800 dark:hover:text-emerald-300 font-semibold">
                Read More â†’
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gradient-to-r from-emerald-600 to-teal-600">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Explore Cannabis Flower?
      </h2>
      <p class="text-xl text-emerald-100 mb-8 max-w-2xl mx-auto">
        Browse our curated selection of premium cannabis flower from trusted Florida dispensaries.
      </p>
      <div class="space-y-4 md:space-y-0 md:space-x-4 md:flex md:justify-center">
        <a href="/stores" class="inline-block bg-white text-emerald-700 font-semibold py-3 px-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
          Find Dispensaries
        </a>
        <a href="/categories" class="inline-block bg-emerald-700 text-white font-semibold py-3 px-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border-2 border-white/20">
          Explore Categories
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  article {
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>