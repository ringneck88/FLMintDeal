    }
  ];
  
  dosageForms = [
    { id: 7, name: 'Inhalation', slug: 'inhalation', publishedAt: '2025-08-25T21:03:08.240Z' },
    { id: 11, name: 'Oral Capsule', slug: 'oral-capsule', publishedAt: '2025-08-26T17:19:19.769Z' },
