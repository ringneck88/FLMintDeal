      discount: 'B2G1 FREE',
      validUntil: new Date(Date.now() + 5 * 24 * 60 * 60 * 1000).toISOString(),
      store: 'Sunshine Cannabis',
      category: 'Edibles',
      image: 'https://images.unsplash.com/photo-1582048928301-2b9c1ed1b93a?w=400&h=300&fit=crop&q=80',
      publishedAt: new Date().toISOString()
    }
  ];

  stores = [
    {
      id: 1,
      name: 'Mint Cannabis - Tempe',
      address: '1237 E University Dr',
      city: 'Tempe',
      state: 'AZ',
      phone: '(480) 999-6468',
      hours: 'Mon-Sun: 8AM-10PM',
      slug: 'mint-cannabis-tempe',
      image: 'https://images.unsplash.com/photo-1586864387967-d02ef85d93e8?w=400&h=300&fit=crop&q=80',
      publishedAt: new Date().toISOString()
    },
    {
      id: 2,
      name: 'Mint Cannabis - Phoenix',
      address: '1949 E Camelback Rd',
      city: 'Phoenix',
      state: 'AZ',
      phone: '(602) 999-6468',
