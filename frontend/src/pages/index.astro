    { id: 2, title: 'Edibles', description: 'Cannabis-infused food products with precise dosing', slug: 'edibles', icon: 'üç≠', publishedAt: new Date().toISOString() },
    { id: 3, title: 'Concentrates', description: 'High-potency cannabis extracts for experienced users', slug: 'concentrates', icon: 'üçØ', publishedAt: new Date().toISOString() },
    { id: 4, title: 'Vaporizers', description: 'Clean, efficient cannabis vaporization products', slug: 'vaporizers', icon: 'üí®', publishedAt: new Date().toISOString() },
