---
import Layout from '../layouts/Layout.astro';
import { strapi } from '../lib/strapi';

// Sample deals data to display (replace with Strapi API when working)
const sampleDeals = [
  {
    id: 1,
    title: "Gaming Laptop Deal",
    description: "High-performance gaming laptop with RTX graphics card, perfect for gaming and creative work.",
    price: 899.99,
    originalPrice: 1299.99,
    discount: 31,
    category: "Electronics",
    featured: true,
    image: "https://images.unsplash.com/photo-1525547719571-a2d4ac8945e2?w=400&h=300&fit=crop"
  },
  {
    id: 2,
    title: "Wireless Headphones",
    description: "Premium noise-canceling wireless headphones with superior sound quality and comfort.",
    price: 149.99,
    originalPrice: 249.99,
    discount: 40,
    category: "Audio",
    featured: false,
    image: "https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=400&h=300&fit=crop"
  },
  {
    id: 3,
    title: "Smart Watch Pro",
    description: "Advanced fitness tracking smart watch with heart rate monitor and GPS functionality.",
    price: 199.99,
    originalPrice: 299.99,
    discount: 33,
    category: "Wearables",
    featured: true,
    image: "https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=400&h=300&fit=crop"
  },
  {
    id: 4,
    title: "4K Webcam",
    description: "Crystal clear 4K webcam perfect for streaming, video calls, and content creation.",
    price: 89.99,
    originalPrice: 149.99,
    discount: 40,
    category: "Accessories",
    featured: false,
    image: "https://images.unsplash.com/photo-1588421357574-87938a86fa28?w=400&h=300&fit=crop"
  }
];

let strapiStatus = 'Not connected';
let strapiUrl = import.meta.env.PUBLIC_STRAPI_URL || 'http://localhost:1338';

// Try to connect to Strapi to check status
try {
  await fetch(`${strapiUrl}/admin/init`);
  strapiStatus = 'Connected';
} catch (error) {
  strapiStatus = 'Disconnected - Start your Strapi backend';
}
---

<Layout title="FLMintDeals - Your Deals Website">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-700 text-white">
    <div class="px-4 py-16 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl">
          Amazing Deals Await
        </h1>
        <p class="mt-6 text-xl text-blue-100 max-w-3xl mx-auto">
          Discover incredible discounts on the latest tech, electronics, and gadgets. 
          Save big on premium products from top brands.
        </p>
        <div class="mt-8">
          <a href="#deals" class="inline-flex items-center px-6 py-3 border border-transparent text-lg font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 transition-colors duration-200">
            Browse Deals
            <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- System Status (Compact) -->
  <div class="bg-gray-50 border-b">
    <div class="max-w-7xl mx-auto px-4 py-3 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center space-x-4">
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
            <span class="text-gray-600">Frontend: Running</span>
          </div>
          <div class="flex items-center">
            <div class={`w-2 h-2 rounded-full mr-2 ${strapiStatus === 'Connected' ? 'bg-green-400' : 'bg-red-400'}`}></div>
            <span class="text-gray-600">Backend: {strapiStatus === 'Connected' ? 'Connected' : 'Disconnected'}</span>
          </div>
        </div>
        <div class="text-gray-500">
          <span>API: {strapiUrl}</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Deals Section -->
  <div id="deals" class="py-16">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">Featured Deals</h2>
        <p class="mt-4 text-lg text-gray-600">Hand-picked deals with the biggest savings</p>
      </div>

      <!-- Deals Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {sampleDeals.filter(deal => deal.featured).map(deal => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <div class="aspect-w-16 aspect-h-9">
              <img 
                src={deal.image} 
                alt={deal.title}
                class="w-full h-48 object-cover"
              />
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full font-semibold">
                  {deal.category}
                </span>
                <span class="bg-red-500 text-white text-sm font-bold px-2 py-1 rounded">
                  -{deal.discount}%
                </span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">{deal.title}</h3>
              <p class="text-gray-600 mb-4">{deal.description}</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <span class="text-2xl font-bold text-blue-600">${deal.price}</span>
                  <span class="text-lg text-gray-500 line-through">${deal.originalPrice}</span>
                </div>
                <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 font-medium">
                  View Deal
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- All Deals Section -->
  <div class="bg-gray-50 py-16">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">More Great Deals</h2>
        <p class="mt-4 text-lg text-gray-600">Explore our complete collection of discounted products</p>
      </div>

      <!-- Deals Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
        {sampleDeals.map(deal => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <div class="aspect-w-16 aspect-h-9">
              <img 
                src={deal.image} 
                alt={deal.title}
                class="w-full h-32 object-cover"
              />
            </div>
            <div class="p-4">
              <div class="flex items-center justify-between mb-2">
                <span class="inline-block bg-gray-100 text-gray-800 text-xs px-2 py-1 rounded font-medium">
                  {deal.category}
                </span>
                <span class="bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">
                  -{deal.discount}%
                </span>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2 truncate">{deal.title}</h3>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-1">
                  <span class="text-lg font-bold text-blue-600">${deal.price}</span>
                  <span class="text-sm text-gray-500 line-through">${deal.originalPrice}</span>
                </div>
                <button class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 transition-colors duration-200">
                  View
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Call to Action Section -->
  <div class="bg-blue-900 text-white py-16">
    <div class="px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">Don't Miss Out on Amazing Deals!</h2>
      <p class="text-xl text-blue-200 mb-8">Get notified when new deals are available</p>
      <div class="max-w-md mx-auto flex">
        <input 
          type="email" 
          placeholder="Enter your email" 
          class="flex-1 px-4 py-3 rounded-l-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button class="bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-r-lg font-semibold transition-colors duration-200">
          Subscribe
        </button>
      </div>
    </div>
  </div>
</Layout>
