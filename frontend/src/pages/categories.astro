---
// src/pages/categories.astro
import Layout from '../layouts/Layout.astro';
import { strapi } from '../lib/strapi';

let categories = [];
let error: string | null = null;

try {
  const response = await strapi.getMany('/dosage-forms', {
    sort: 'Title:asc',
    pagination: { pageSize: 100 }
  });
  categories = response.data;
} catch (e: any) {
  console.error('Error fetching categories:', e);
  error = e?.message ?? 'Failed to load categories';

  // Fallback sample categories from MintDeals.com
  categories = [
    {
      id: 1,
      documentId: 'flower',
      Title: 'Flower',
      Description: 'Premium cannabis flower for smoking and vaporizing. Available in various strains including Indica, Sativa, and Hybrid varieties.',
      SEO_Title_Slug: 'flower'
    },
    {
      id: 2,
      documentId: 'pre-rolls',
      Title: 'Pre-Rolls',
      Description: 'Ready-to-smoke pre-rolled joints made with high-quality cannabis flower. Convenient and consistent dosing.',
      SEO_Title_Slug: 'pre-rolls'
    },
    {
      id: 3,
      documentId: 'vaporizers',
      Title: 'Vaporizers',
      Description: 'Cannabis vaporizer cartridges and pods for clean, efficient consumption. Compatible with various vaping devices.',
      SEO_Title_Slug: 'vaporizers'
    },
    {
      id: 4,
      documentId: 'concentrates',
      Title: 'Concentrates',
      Description: 'High-potency cannabis concentrates including shatter, wax, live resin, and rosin. For experienced users.',
      SEO_Title_Slug: 'concentrates'
    },
    {
      id: 5,
      documentId: 'edibles',
      Title: 'Edibles',
      Description: 'Cannabis-infused food products including gummies, chocolates, beverages, and baked goods. Precise dosing and long-lasting effects.',
      SEO_Title_Slug: 'edibles'
    },
    {
      id: 6,
      documentId: 'topicals',
      Title: 'Topicals',
      Description: 'Cannabis-infused topical products including balms, lotions, and salves for localized relief without psychoactive effects.',
      SEO_Title_Slug: 'topicals'
    },
    {
      id: 7,
      documentId: 'cartridges',
      Title: 'Cartridges',
      Description: 'Cannabis oil cartridges for vape pens. Available in various strains and potencies for discrete consumption.',
      SEO_Title_Slug: 'cartridges'
    }
  ];
}

// Category icons mapping
const categoryIcons: Record<string, string> = {
  'flower': 'üåø',
  'pre-rolls': 'üö¨',
  'vaporizers': 'üí®',
  'concentrates': 'üçØ',
  'edibles': 'üç≠',
  'topicals': 'üß¥',
  'cartridges': 'üñäÔ∏è'
};

const pageTitle = 'Cannabis Categories - FLMint Deals';
---

<Layout title={pageTitle}>
  {error && (
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-blue-200 dark:border-blue-700 text-blue-800 dark:text-blue-200 px-6 py-4 rounded-xl mb-8 shadow-sm max-w-7xl mx-auto mt-8">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-semibold">Demo Mode Active</h3>
          <p class="text-sm mt-1">Showing sample category data. Connect to Strapi admin to display live data.</p>
        </div>
      </div>
    </div>
  )}

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-r from-emerald-600 via-emerald-700 to-teal-700 dark:from-emerald-800 dark:via-emerald-900 dark:to-teal-900">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
        Cannabis Categories
      </h1>
      <p class="text-xl md:text-2xl text-emerald-100 mb-8 max-w-3xl mx-auto leading-relaxed">
        Explore our comprehensive selection of premium cannabis products, each carefully curated for quality and consistency.
      </p>
      <div class="text-emerald-200">
        <span class="text-lg">Browse {categories.length} Product Categories</span>
      </div>
    </div>

    <!-- Floating geometric shapes -->
    <div class="absolute top-10 left-10 w-20 h-20 bg-white/10 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-emerald-300/20 rounded-full blur-2xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-teal-300/30 rounded-full blur-lg animate-pulse delay-500"></div>
  </section>

  <!-- Categories Grid -->
  <section class="py-20 -mt-12 relative z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {categories.map((category, index) => {
          const icon = categoryIcons[category.SEO_Title_Slug] || 'üåø';
          const delay = `${index * 100}ms`;

          return (
            <div
              class="group bg-white/80 dark:bg-slate-800/80 backdrop-blur-xl rounded-3xl p-8 shadow-xl border border-white/20 dark:border-slate-700/20 hover:shadow-2xl transition-all duration-500 hover:-translate-y-4 hover:rotate-1"
              style={`animation-delay: ${delay}`}
            >
              <div class="text-center">
                <!-- Category Icon -->
                <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-2xl flex items-center justify-center text-4xl group-hover:scale-110 transition-transform duration-300">
                  {icon}
                </div>

                <!-- Category Title -->
                <h3 class="text-2xl font-bold text-slate-800 dark:text-white mb-4 group-hover:text-emerald-600 transition-colors duration-300">
                  {category.Title}
                </h3>

                <!-- Category Description -->
                <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6 line-clamp-3">
                  {category.Description}
                </p>

                <!-- Action Button -->
                <a href={`/learn/${category.SEO_Title_Slug}`} class="block w-full bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white font-semibold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 text-center">
                  Learn more about {category.Title}
                </a>
              </div>

              <!-- Decorative Elements -->
              <div class="absolute top-4 right-4 opacity-20 group-hover:opacity-40 transition-opacity duration-300">
                <div class="w-8 h-8 bg-gradient-to-br from-emerald-400 to-teal-400 rounded-full"></div>
              </div>
              <div class="absolute bottom-4 left-4 opacity-10 group-hover:opacity-30 transition-opacity duration-300">
                <div class="w-6 h-6 bg-gradient-to-br from-teal-400 to-emerald-400 rounded-full"></div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Featured Information Section -->
  <section class="py-16 bg-gradient-to-r from-slate-50 to-emerald-50 dark:from-slate-900 dark:to-emerald-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-800 dark:text-white mb-4">
          Why Choose FLMint Deals?
        </h2>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
          We're committed to providing the highest quality cannabis products with expert guidance and education.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-8 bg-white/60 dark:bg-slate-800/60 backdrop-blur-sm rounded-2xl">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-3">Premium Quality</h3>
          <p class="text-slate-600 dark:text-slate-300">All products are lab-tested and sourced from trusted cultivators for consistent quality and safety.</p>
        </div>

        <div class="text-center p-8 bg-white/60 dark:bg-slate-800/60 backdrop-blur-sm rounded-2xl">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-3">Expert Guidance</h3>
          <p class="text-slate-600 dark:text-slate-300">Our knowledgeable staff provides personalized recommendations to help you find the perfect product.</p>
        </div>

        <div class="text-center p-8 bg-white/60 dark:bg-slate-800/60 backdrop-blur-sm rounded-2xl">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-3">Best Prices</h3>
          <p class="text-slate-600 dark:text-slate-300">Competitive pricing with regular deals and promotions to make quality cannabis accessible.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .group {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
</style>