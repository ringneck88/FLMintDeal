---
export const prerender = true;
import Layout from '../../layouts/Layout.astro';
import { strapi } from '../../lib/strapi';

// Get the slug from the URL parameters
const { slug } = Astro.params;

let deal = null;
let strapiUrl = import.meta.env.PUBLIC_STRAPI_URL || 'http://localhost:1338';
let apiError = null;

try {
  // Fetch all deals and find the one with matching slug
  const dealsResponse = await strapi.getMany('/deals', { 
    'populate': '*',
    'pagination[limit]': '100'
  });
  
  if (dealsResponse && dealsResponse.data && dealsResponse.data.length > 0) {
    const foundDeal = dealsResponse.data.find(d => {
      const dealSlug = d.slug || d.title?.toLowerCase().replace(/[^a-z0-9]+/g, '-') || `deal-${d.id}`;
      return dealSlug === slug;
    });
    
    if (foundDeal && foundDeal.publishedAt) {
      deal = {
        id: foundDeal.id,
        documentId: foundDeal.documentId,
        title: foundDeal.title,
        description: foundDeal.description,
        price: foundDeal.price,
        originalPrice: foundDeal.originalPrice,
        discount: foundDeal.discount,
        category: foundDeal.category,
        featured: foundDeal.featured,
        slug: foundDeal.slug || foundDeal.title?.toLowerCase().replace(/[^a-z0-9]+/g, '-') || `deal-${foundDeal.id}`,
        image: foundDeal.image?.url || `https://images.unsplash.com/photo-1560472355-536de3962603?w=800&h=600&fit=crop&q=80`,
        createdAt: foundDeal.createdAt,
        updatedAt: foundDeal.updatedAt,
        publishedAt: foundDeal.publishedAt
      };
    }
  }
} catch (error) {
  apiError = error.message;
}

// If deal not found, return 404
if (!deal) {
  return Astro.redirect('/404');
}

// Calculate savings
const savings = deal.originalPrice - deal.price;
const savingsPercent = Math.round(((deal.originalPrice - deal.price) / deal.originalPrice) * 100);
---

<Layout title={`${deal.title} - Deal - FLMintDeals`}>
  <!-- Breadcrumb -->
  <div class="bg-gray-50 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li>
            <a href="/" class="text-blue-600 hover:text-blue-800">Home</a>
          </li>
          <li>
            <span class="text-gray-500">/</span>
          </li>
          <li>
            <a href="/#deals" class="text-blue-600 hover:text-blue-800">Deals</a>
          </li>
          <li>
            <span class="text-gray-500">/</span>
          </li>
          <li>
            <span class="text-gray-900 font-medium">{deal.title}</span>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Deal Detail -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      
      <!-- Deal Image -->
      <div class="aspect-square">
        <img 
          src={deal.image} 
          alt={deal.title}
          class="w-full h-full object-cover rounded-lg shadow-lg"
        />
      </div>

      <!-- Deal Details -->
      <div class="space-y-6">
        <!-- Header -->
        <div>
          <div class="flex items-center space-x-2 mb-2">
            <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full font-semibold">
              {deal.category}
            </span>
            <span class="bg-red-500 text-white text-sm font-bold px-3 py-1 rounded">
              -{deal.discount}% OFF
            </span>
            {deal.featured && (
              <span class="bg-yellow-100 text-yellow-800 text-sm px-3 py-1 rounded font-medium">
                ⭐ Featured
              </span>
            )}
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-4">{deal.title}</h1>
        </div>

        <!-- Pricing -->
        <div class="bg-gray-50 p-6 rounded-lg">
          <div class="flex items-baseline space-x-4 mb-2">
            <span class="text-4xl font-bold text-blue-600">${deal.price}</span>
            <span class="text-2xl text-gray-500 line-through">${deal.originalPrice}</span>
          </div>
          <div class="text-green-600 font-semibold text-lg">
            You save ${savings.toFixed(2)} ({savingsPercent}%)
          </div>
        </div>

        <!-- Description -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Description</h3>
          <p class="text-gray-600 leading-relaxed">{deal.description}</p>
        </div>

        <!-- Deal Features -->
        <div class="bg-blue-50 p-4 rounded-lg">
          <h4 class="font-semibold text-blue-900 mb-2">Deal Features</h4>
          <ul class="text-blue-800 space-y-1">
            <li>✓ Limited time offer</li>
            <li>✓ Free shipping available</li>
            <li>✓ Money-back guarantee</li>
            <li>✓ Premium quality product</li>
          </ul>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-4 pt-6">
          <button class="w-full bg-blue-600 text-white py-4 px-6 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors duration-200 shadow-lg">
            Get This Deal Now
          </button>
          <button class="w-full border-2 border-gray-300 text-gray-700 py-3 px-6 rounded-lg font-medium hover:border-gray-400 transition-colors duration-200">
            Add to Wishlist
          </button>
        </div>

        <!-- Deal Metadata -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4 border-t">
          <div class="text-sm">
            <span class="font-semibold text-gray-900">Deal ID:</span>
            <span class="text-gray-700 ml-1">{deal.id}</span>
          </div>
          <div class="text-sm">
            <span class="font-semibold text-gray-900">Last Updated:</span>
            <span class="text-gray-700 ml-1">{new Date(deal.updatedAt).toLocaleDateString()}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Deal Information -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Why This Deal -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Why This Deal?</h3>
        <ul class="text-gray-600 space-y-2">
          <li>• Significant {savingsPercent}% discount</li>
          <li>• High-quality {deal.category.toLowerCase()} product</li>
          <li>• Limited availability</li>
          <li>• Verified seller</li>
        </ul>
      </div>

      <!-- How It Works -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">How It Works</h3>
        <ol class="text-gray-600 space-y-2">
          <li>1. Click "Get This Deal"</li>
          <li>2. Redirected to seller</li>
          <li>3. Complete your purchase</li>
          <li>4. Enjoy your savings!</li>
        </ol>
      </div>

      <!-- Deal Stats -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Deal Stats</h3>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Original Price:</span>
            <span class="font-semibold">${deal.originalPrice}</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Deal Price:</span>
            <span class="font-semibold text-blue-600">${deal.price}</span>
          </div>
          <div class="flex justify-between border-t pt-2">
            <span class="text-gray-600">Total Savings:</span>
            <span class="font-bold text-green-600">${savings.toFixed(2)}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Similar Deals CTA -->
    <div class="mt-16 bg-gradient-to-r from-blue-600 to-purple-700 text-white rounded-lg p-8 text-center">
      <h3 class="text-2xl font-bold mb-4">Looking for More Deals?</h3>
      <p class="text-blue-100 mb-6">Check out our other amazing offers and save even more!</p>
      <a href="/" class="inline-flex items-center px-6 py-3 border border-transparent text-lg font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 transition-colors duration-200">
        Browse All Deals
        <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</Layout>