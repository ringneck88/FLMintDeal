{
  "kind": "collectionType",
  "collectionName": "stores",
  "info": {
    "singularName": "store",
    "pluralName": "stores",
    "displayName": "Store",
    "description": "Physical dispensary store locations"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "store_code": {
      "type": "string",
      "maxLength": 50,
      "unique": true
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand"
    },
    "region": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::region.region",
      "inversedBy": "stores"
    },
    "city": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::city.city",
      "inversedBy": "stores"
    },
    "address": {
      "type": "component",
      "component": "common.address",
      "repeatable": false,
      "required": true
    },
    "geo": {
      "type": "component",
      "component": "common.geo-point",
      "repeatable": false
    },
    "phone": {
      "type": "string",
      "maxLength": 20
    },
    "email": {
      "type": "email"
    },
    "timezone": {
      "type": "string",
      "default": "America/New_York"
    },
    "services": {
      "type": "component",
      "component": "store.service-tag",
      "repeatable": true
    },
    "amenities": {
      "type": "component",
      "component": "store.amenity-tag",
      "repeatable": true
    },
    "hours": {
      "type": "component",
      "component": "common.hours",
      "repeatable": false
    },
    "hour_exceptions": {
      "type": "component",
      "component": "common.hours-exception",
      "repeatable": true
    },
    "hero_media": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "cta_blocks": {
      "type": "component",
      "component": "ui.cta",
      "repeatable": true
    },
    "seo": {
      "type": "component",
      "component": "seo.meta",
      "repeatable": false
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "pos_location_id": {
      "type": "string",
      "maxLength": 100
    },
    "menu_url": {
      "type": "string"
    },
    "online_ordering_url": {
      "type": "string"
    },
    "promotions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::promotion.promotion",
      "mappedBy": "store"
    },
    "events": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::event.event",
      "mappedBy": "stores"
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job",
      "mappedBy": "store"
    },
    "announcements": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::announcement.announcement",
      "mappedBy": "stores"
    }
  }
}
