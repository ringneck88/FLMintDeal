{
  "kind": "collectionType",
  "collectionName": "dosage_products",
  "info": {
    "singularName": "dosage-product",
    "pluralName": "dosage-products",
    "displayName": "Dosage Product",
    "description": "Cannabis products with dosage information"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "text"
    },
    "Quanity": {
      "type": "decimal"
    },
    "unit_type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-type.unit-type",
      "inversedBy": "dosage_products"
    },
    "cannaboid_type": {
      "type": "relation",
      "relation": "manyToOne", 
      "target": "api::cannaboid-type.cannaboid-type",
      "inversedBy": "dosage_products"
    },
    "dosage_form": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::dosage-form.dosage-form",
      "inversedBy": "dosage_products"
    },
    "ingredients": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::ingredient.ingredient",
      "mappedBy": "dosage_products"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}