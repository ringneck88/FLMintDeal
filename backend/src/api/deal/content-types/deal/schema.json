{
  "kind": "collectionType",
  "collectionName": "deals",
  "info": {
    "singularName": "deal",
    "pluralName": "deals",
    "displayName": "Deal",
    "description": "A deals/commerce item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "originalPrice": {
      "type": "decimal"
    },
    "discount": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "category": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    }
  }
}
