{
  "kind": "collectionType",
  "collectionName": "regions",
  "info": {
    "singularName": "region",
    "pluralName": "regions",
    "displayName": "Region",
    "description": "State/region management for legal and operational requirements"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "code": {
      "type": "enumeration",
      "enum": [
        "AL",
        "AK",
        "AZ",
        "AR",
        "CA",
        "CO",
        "CT",
        "DE",
        "FL",
        "GA",
        "HI",
        "ID",
        "IL",
        "IN",
        "IA",
        "KS",
        "KY",
        "LA",
        "ME",
        "MD",
        "MA",
        "MI",
        "MN",
        "MS",
        "MO",
        "MT",
        "NE",
        "NV",
        "NH",
        "NJ",
        "NM",
        "NY",
        "NC",
        "ND",
        "OH",
        "OK",
        "OR",
        "PA",
        "RI",
        "SC",
        "SD",
        "TN",
        "TX",
        "UT",
        "VT",
        "VA",
        "WA",
        "WV",
        "WI",
        "WY"
      ],
      "required": true,
      "unique": true
    },
    "timezone": {
      "type": "string",
      "default": "America/New_York"
    },
    "tax_profile": {
      "type": "component",
      "repeatable": false,
      "component": "commerce.tax-profile"
    },
    "age_restriction": {
      "type": "integer",
      "default": 21,
      "min": 18,
      "max": 25
    },
    "legal_disclaimer": {
      "type": "component",
      "repeatable": false,
      "component": "legal.disclaimer"
    },
    "delivery_rules": {
      "type": "component",
      "repeatable": false,
      "component": "ops.fulfillment-rules"
    },
    "stores": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::store.store",
      "mappedBy": "region"
    },
    "cities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::city.city",
      "mappedBy": "region"
    },
    "promotions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::promotion.promotion",
      "mappedBy": "regions"
    },
    "compliance_policies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::compliance-policy.compliance-policy",
      "mappedBy": "region"
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event",
      "mappedBy": "region"
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job",
      "mappedBy": "region"
    },
    "announcements": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::announcement.announcement",
      "mappedBy": "regions"
    }
  }
}
