{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": "Employment opportunities"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "employment_type": {
      "type": "enumeration",
      "enum": [
        "full-time",
        "part-time",
        "contract",
        "temporary"
      ],
      "required": true
    },
    "posted_at": {
      "type": "datetime",
      "required": true
    },
    "apply_url": {
      "type": "string"
    },
    "apply_email": {
      "type": "email"
    },
    "store": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store.store",
      "inversedBy": "jobs"
    },
    "region": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::region.region",
      "inversedBy": "jobs"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "jobs"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta"
    }
  }
}
